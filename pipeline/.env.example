# Connection details
REMOTE_SSH=deploy@example.com
REMOTE_UPLOAD_ROOT=/var/www/stories/uploads
REMOTE_PROCESSED_ROOT=/var/www/stories/uploads/processed
REMOTE_DONE_SUFFIX=.done

# Local working directories (will be created if missing)
LOCAL_ROOT="$HOME/stories-pipeline"
LOCAL_INBOX="$LOCAL_ROOT/inbox"
LOCAL_OUTPUT="$LOCAL_ROOT/output"
LOCAL_ARCHIVE="$LOCAL_ROOT/archive"
LOCAL_FAILED="$LOCAL_ROOT/failed"
LOCAL_STATE_DIR="$LOCAL_ROOT/state"
LOCAL_LOG_DIR="$LOCAL_ROOT/logs"

# Binaries (override if installed elsewhere)
FFMPEG_BIN=ffmpeg
RSYNC_BIN=rsync
SSH_BIN=ssh
CURL_BIN=curl

# Behaviour
PRESERVE_ORIGINALS=true
UPLOAD_DERIVATIVES=true
LOG_LEVEL=info

# Optional: base URL used when generating manifests for the front end
PUBLIC_BASE_URL=https://stories.example.com/uploads/processed

# Callback configuration
PIPELINE_API_URL=https://stories.example.com/api/pipeline_update_prompt.php
# Generate the same token configured in the app (.env) via `openssl rand -hex 32`
PIPELINE_API_TOKEN=
